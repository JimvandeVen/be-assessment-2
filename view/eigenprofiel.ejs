<!DOCTYPE html>
<html lang="nl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css">
    <title>BookLove</title>
</head>

<body>
    <header>
        <a href="/ingelogd">
            <h1>BookLove</h1>
        </a>
        <a href="/eigenprofiel"><img src="/images/Profile%20Large.png" alt="Profiel"></a>
        <a href="/berichten"><img class="berichten" src="/images/bericht.png" alt="Logo"></a>
        <a href=/log-out>Log out</a>

    </header>
    <main>
        <section class="inloggen hidden boekToevoegenSection">
            <h2>Voeg je boek toe</h2>
            <p class="boekToevoegenSluit">sluiten</p>
            <form action="/boekToevoegen" method="post">
                <label for="titel">Titel</label>
                <input required name="titel" id="titel" placeholder="In Europa" class="formInput">
                <label for="auteur">Auteur</label>
                <input required name="auteur" id="auteur" placeholder="Geert Mak" class="formInput">
                <label for="isbn">ISBN (Optioneel)</label>
                <input id="isbn" name="ISBN" placeholder="9872987547" class="formInput">
                <input type="submit" value="toevoegen" class="boekToevoegenSubmit" id="inloggenSubmit">
            </form>
        </section>
        <section class="eigenProfielSection">

            <img class="kandidaad" src="/images/Profile%20Large.png" alt="geert mak">
            <h2>
                <%= data[0].naam %>
            </h2>
            <a href="/aanpassenForm"><img class="editButton" src="/images/edit@2x.png" alt="edit"></a>
            <h4>Woonplaats:</h4>
            <p>
                <%= data[0].woonplaats %>
            </p>
            <h4>Geboortedatum:</h4>
            <p>
                <%= data[0].geboortedatum %>
            </p>
            <h4>Jouw bibliotheek:</h4>
            <ul>

                <% if (data[0].ISBN){ data.forEach(function (entity) { %>
                    <li>
                        <form method="POST" action="/<%= entity.ISBN %>?_method=DELETE">
                            <button type="submit">Delete</button>
                        </form><img data-isbn="<%= entity.ISBN %>" src="/images/<%= entity.ISBN %>.jpg" alt="" ></li>
                    <% })} %>
                        <li><img class="boekToevoegen" src="/images/add.png" alt=""></li>
            </ul>
        </section>
    </main>
    <script src="/javaprofielstap2.js"></script>
</body>
